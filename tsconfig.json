{
  "//": "tsconfig-schema:ignore",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* === Módulos y compatibilidad === */
    "target": "ES2022",
    
  
    "module": "Node16",
    
    /* Esta opción requiere que 'module' sea también Node16 */
    "moduleResolution": "node16",
    
    "lib": ["ES2022"],

    /* === Seguridad del compilador === */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === JS / compatibilidad === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === Alias === */
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@modules/*": ["./src/modules/*"],
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/utils/*"]
    },

    /* === Performance === */
    "noUncheckedIndexedAccess": false,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}